{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "lib": ["es2015", "es6", "esnext.asynciterable", "dom"],
    "downlevelIteration": true,
    "suppressImplicitAnyIndexErrors": true,

  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__tests__/*.ts"],
}
